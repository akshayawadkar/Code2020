
public class _0002_ClimbingStairs {

	public static void main(String[] args) {
		
		int n = 4;
		
		int result = solve(n);
		System.out.println(result);
		
	}

	private static int solve(int n) {
		
		if(n == 0 || n == 1) {
			return 1;
		}
		
		return solve(n - 1) + solve(n - 2) + solve(n - 3);
	}
}
