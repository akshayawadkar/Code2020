
public class _0003_ClimbingStairsWithJumps {
	
	public static void main(String[] args) {
		
		int[] arr = {3, 3, 0, 2, 2, 3};
		
		int result = solve(arr, 0);
		System.out.println(result);
		
	}

	private static int solve(int[] arr, int idx) {
		
		if(idx > arr.length) {
			return 0;
		}
		
		if(idx == arr.length) {
			return 1;
		}
		
//		if(idx == arr.length - 1) {
//			return 1;
//		}
		
		int numWays = 0;
		
		for(int i = 1; i <= arr[idx]; i++) {
			
			numWays += solve(arr, idx + i);
			
		}
		
		
		return numWays;
	}

}
