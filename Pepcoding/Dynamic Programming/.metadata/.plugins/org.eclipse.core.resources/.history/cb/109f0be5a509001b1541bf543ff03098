public class _8_PrintSubsetsWithSum {

	private static int solve(int[] arr, int sum, int n) {

		if(sum == 0) {
			return 1;
		}
		
		if(n < 0) {
			return 0;
		}
		
		if(arr[n] <= sum) {
			return solve(arr, sum, n - 1) + solve(arr, sum - arr[n], n - 1);
		}else {
			return solve(arr, sum, n - 1);
		}
		 
	}

	public static void main(String[] args) {

		int[] arr = { 1, 2, 3, 3 };
		int sum = 6;

		int result = solve(arr, sum, arr.length - 1);
		System.out.println(result);
	}
}