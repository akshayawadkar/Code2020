
public class _0009_CountEncodings {
	
	static char[] map;
	public static void main(String[] args) {
		
		map = " abcdefghijklmnopqrstuvwxyz".toCharArray();
		String ip = "123";
		
		int result = solve(ip, 0, "");
		System.out.println(result);
	}
	private static int solve(String ip, int idx, String curr) {
		 
		if(idx == ip.length()) {
			return 1;
		}
		
		if(idx > ip.length()) {
			return 0;
		}
		
		if(idx == ip.length() - 1) {
			return 1;
		}
		
		
		
		
		int oneDigit = Integer.valueOf(ip.substring(idx, idx + 1));
		int twoDigit = Integer.valueOf(ip.substring(idx, idx + 1));
		
		int result = 0;
		
		if(oneDigit > 0) {
			result += solve(ip, idx + 1, curr);
		}
		
		if(twoDigit >= 10 && twoDigit <= 26) {
			result += solve(ip, idx + 2, curr);
		}
		
		
		return result;
	}

}
