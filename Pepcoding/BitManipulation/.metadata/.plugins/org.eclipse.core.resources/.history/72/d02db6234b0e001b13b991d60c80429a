public class Test {

	public static void main(String[] args) {

		int num = 4;

		int minSteps = solve(num);
		System.out.println(minSteps);

	}

	private static int solve(int num) {

		if (num == 1) {
			return 0;
		}
		
		if(num < 0) {
			return 0;
		}

		int min = Integer.MAX_VALUE;

		if (num % 2 == 0) {
			min = solve(num / 2) + 1;
		}else {
			min = Math.min(solve(num - 1), solve(num + 1)) + 1;
		}

		return min;
	}
}