public class Test {

	public static void main(String[] args) {

		int num = ;

		int minSteps = solve(num);
		System.out.println(minSteps);

	}

	private static int solve(int num) {

		if (num == 0) {
			return 1;
		}

		int min = Integer.MAX_VALUE;

		if (num % 2 == 0) {

		}else {
			min = Math.min(solve(num - 1), solve(num + 1));
		}

		return min;
	}
}